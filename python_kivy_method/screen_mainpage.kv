<MyDropDown>:
    Button:
        text: 'My first Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item1')
    Label:
        text: 'Unselectable item'
        size_hint_y: None
        height: 44
    Button:
        text: 'My second Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item2')

<screen_mainpage>:
    id: mainpage
    name: "mainpage"
    buttom_layout: buttomlayoutID
    dd_btn: btn_ddID
    hi_ka: hikaID
    modes: choose_mode

    canvas:
        Color:
            rgba: root.background_color
        Rectangle:
            pos: root.pos
            size: root.size
    orientation: 'vertical'
    BoxLayout:
        id: buttomlayoutID
        #cols: 2
        size_hint: 0.8, .08
        pos_hint: {'x': 0, 'y': .95}
        IconToggle:
            id: choose_mode
            text: "Mode\n Listening"
            font_size: '30sp'
            on_press: root.modeSwitch()
        Button:
            id: btn_ddID
            text: 'test'
            on_release: root.drop_down.open(self)
        IconToggle:
            id: hikaID
            text: 'Hiragana'
            font_size: '30sp'
            on_press: root.hi_or_ka()
    BoxLayout:
        size_hint: 1, .95
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}
            IconButton:
                font_size: "20sp"
                on_press: root.gotoInfo()
            Label:
                text: " 50 Sounds"
                color: root.font_color_title
        Label:
            text: root.getscores()
            color: root.font_color_secondary
            bold: True
            font_size: "40sp"
        BoxLayout:
            orientation: "horizontal"
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}
            Button:
                id: btn_choose
                text: "Hello"
                font_size: "14sp"
                color: root.font_color
        Label:
            text: "Hello"
            color: root.font_color_title
            font_size: "40sp"

