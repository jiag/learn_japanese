<screen_mainpage>:
    id: mainpage
    buttom_layout: buttomlayoutID
    name: "mainpage"
    canvas:
        Color:
            rgba: root.background_color
        Rectangle:
            pos: root.pos
            size: root.size
    BoxLayout:
        orientation: "vertical"
        size_hint: 1, 1
        BoxLayout:
            orientation: "horizontal"
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}
            IconButton:
                font_size: "20sp"
                on_press: root.gotoInfo()
            Label:
                text: " 50 Sounds"
                color: root.font_color_title
        Label:
            text: root.getscores()
            color: root.font_color_secondary
            bold: True
            font_size: "40sp"
        BoxLayout:
            orientation: "horizontal"
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}
            Button:
                id: btn_choose
                text: "Hello"
                font_size: "14sp"
                color: root.font_color
        Label:
            text: "Hello"
            color: root.font_color_title
            font_size: "40sp"
        BoxLayout:
            id: buttomlayoutID
            orientation: "horizontal"
            size_hint: 1, 0.3
            pos_hint: {"x": 0.5}
            MyToggleButton:
                id: choose_mode
                text: "Mode\n" + root.mode
                size_hint_x: None
                size_hint_y: 1
            MyToggleButton:
                id: hiragana_katakana
                text: root.hika
                size_hint_x: None
                size_hint_y: 1

